{% extends 'base.html.twig' %}

{% block title %}Diagnosis index{% endblock %}

{% block body %}
    <h1>Diagnosis index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Description</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for diagnosi in diagnoses %}
            <tr>
                <td>{{ diagnosi.id }}</td>
                <td>{{ diagnosi.description }}</td>
                <td>
                    <a href="{{ path('app_diagnosis_show', {'id': diagnosi.id}) }}">show</a>
                    <a href="{{ path('app_diagnosis_edit', {'id': diagnosi.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_diagnosis_new') }}">Create new</a>
{% endblock %}
